{
  "name": "ac-remarks",
  "displayName": "即时标注",
  "version": "1.0.0",
  "author": "Aldrich",
  "description": "一款专注于阅读场景的即时标注工具。我们认为阅读的价值是由作者与读者共同完成的，与作者任何时刻产生的灵感、问题、冲突都值得被记录，值得持续回顾。",
  "type": "module",
  "keywords": [
    "即时标注",
    "深度阅读",
    "知识回顾",
    "问题总结",
    "划词标注",
    "网页标注",
    "网页划词",
    "划词高亮",
    "总结"
  ],
  "engines": {
    "node": ">=14.18.0"
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "fmt": "prettier --write '**/*.{tsx,ts,json,css,scss,md}'"
  },
  "dependencies": {
    "rangy": "1.3.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@crxjs/vite-plugin": "^1.0.12",
    "@types/chrome": "^0.0.236",
    "@types/rangy": "^0.0.36",
    "@types/react": "^18.0.14",
    "@types/react-dom": "^18.0.5",
    "@vitejs/plugin-react": "^1.3.2",
    "glob": "^9.2.1",
    "prettier": "^2.7.1",
    "typescript": "^4.6.4",
    "vite": "^2.9.16",
    "vite-plugin-zip-pack": "^1.0.5"
  }
}
